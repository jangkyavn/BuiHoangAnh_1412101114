<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/layout_list_item_padding_horizontal"
    android:paddingVertical="@dimen/layout_list_item_padding_vertical">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="@dimen/iv_image_width"
        android:layout_height="@dimen/iv_image_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layout_list_item_content_margin_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/tv_title_size" />

        <TextView
            android:id="@+id/tv_pubdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textSize="@dimen/tv_pubdate_size"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>